<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
"-//Hibernate/Hibernate Mapping DTD//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
      <hibernate-mapping>
          <class name="BookIssue" table="BOOK_ISSUE">
               <meta attribute="class-description">
               </meta>
               <id name="issueId" type="int" column="issue_id">
                     <generator class="native"/>
               </id>
               <property name="catDetailId" column="cat_detail_id" type="int"/>
               <property name="dateOfIssue" column="date_of_issue" type="date"/>
               <property name="dateOfReturn" column="date_of_return" type="date"/>
               <property name="fineAmount" column="fine_amount" type="int"/>
               <property name="stdId" column="std_id" type="int"/>
               <property name="remarks" column="remarks" type="string"/>

           </class>
      </hibernate-mapping>
