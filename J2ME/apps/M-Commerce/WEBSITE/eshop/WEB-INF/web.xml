<?xml version="1.0" encoding="ISO-8859-1"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
   version="2.5">


  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>


<servlet>
    <description></description>
    <display-name>MenuServlet</display-name>
    <servlet-name>MenuServlet</servlet-name>
    <servlet-class>MenuServlet</servlet-class>
  </servlet>

  <servlet>
    <description></description>
    <display-name>ShowProducts</display-name>
    <servlet-name>ShowProducts</servlet-name>
    <servlet-class>ShowProducts</servlet-class>
  </servlet>  
  
  <servlet>
    <description></description>
    <display-name>ViewBasket</display-name>
    <servlet-name>ViewBasket</servlet-name>
    <servlet-class>ViewBasket</servlet-class>
  </servlet>
   
  <servlet>
    <description></description>
    <display-name>PurchaseServlet</display-name>
    <servlet-name>PurchaseServlet</servlet-name>
    <servlet-class>PurchaseServlet</servlet-class>
  </servlet>
     
  <servlet>
    <description></description>
    <display-name>Verification</display-name>
    <servlet-name>Verification</servlet-name>
    <servlet-class>Verification</servlet-class>
  </servlet>
     
  <servlet>
    <description></description>
    <display-name>LoginServlet</display-name>
    <servlet-name>LoginServlet</servlet-name>
    <servlet-class>LoginServlet</servlet-class>
  </servlet> 
  
  <servlet>
    <description></description>
    <display-name>ShowProductsForAdmin</display-name>
    <servlet-name>ShowProductsForAdmin</servlet-name>
    <servlet-class>ShowProductsForAdmin</servlet-class>
  </servlet>
  
  <servlet>
    <description></description>
    <display-name>AddInDatabase</display-name>
    <servlet-name>AddInDatabase</servlet-name>
    <servlet-class>AddInDatabase</servlet-class>
  </servlet>
   
  <servlet>
    <description></description>
    <display-name>LogoutServlet</display-name>
    <servlet-name>LogoutServlet</servlet-name>
    <servlet-class>LogoutServlet</servlet-class>
  </servlet>
    
  <servlet>
    <description></description>
    <display-name>DeleteFromDatabase</display-name>
    <servlet-name>DeleteFromDatabase</servlet-name>
    <servlet-class>DeleteFromDatabase</servlet-class>
  </servlet>
 
 
  
  
  <servlet-mapping>
    <servlet-name>MenuServlet</servlet-name>
    <url-pattern>/MenuServlet</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
    <servlet-name>ShowProducts</servlet-name>
    <url-pattern>/ShowProducts</url-pattern>
  </servlet-mapping>
 
 <servlet-mapping>
    <servlet-name>ViewBasket</servlet-name>
    <url-pattern>/ViewBasket</url-pattern>
  </servlet-mapping>
  
 <servlet-mapping>
    <servlet-name>PurchaseServlet</servlet-name>
    <url-pattern>/PurchaseServlet</url-pattern>
  </servlet-mapping>
    
 <servlet-mapping>
    <servlet-name>Verification</servlet-name>
    <url-pattern>/Verification</url-pattern>
  </servlet-mapping>
    
 <servlet-mapping>
    <servlet-name>LoginServlet</servlet-name>
    <url-pattern>/LoginServlet</url-pattern>
  </servlet-mapping>  
  
 <servlet-mapping>
    <servlet-name>ShowProductsForAdmin</servlet-name>
    <url-pattern>/ShowProductsForAdmin</url-pattern>
  </servlet-mapping>
  
 <servlet-mapping>
    <servlet-name>AddInDatabase</servlet-name>
    <url-pattern>/AddInDatabase</url-pattern>
  </servlet-mapping>
    
